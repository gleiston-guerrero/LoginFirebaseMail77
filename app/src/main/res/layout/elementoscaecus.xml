<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"

    app:cardCornerRadius="10dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/elementoscaecus">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="174dp">

        <ImageView
            android:id="@+id/imgFotoReconocimientoD"
            android:layout_width="162dp"
            android:layout_height="167dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:src="@drawable/camara"
            app:layout_constraintStart_toEndOf="@+id/textView20"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="168dp"
            android:layout_height="167dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imgFotoReconocimientoD"
            android:layout_toRightOf="@+id/imgFotoReconocimientoD"
            android:orientation="vertical"
            android:padding="5dp"
            app:layout_constraintEnd_toStartOf="@+id/textView46"
            app:layout_constraintStart_toEndOf="@+id/imgFotoReconocimientoD"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txtNombreReconocimientoD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:fontFamily="@font/abel"
                android:text="Recocimiento "
                android:textAlignment="center"
                android:textColor="@color/cardview_dark_background"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TxtConfianzaD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/abel"
                android:text="Confianza"
                android:textAlignment="center"
                android:textColor="#515151"
                android:textSize="15dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txtUrlD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/abel"
                android:text="Url de la imagen"
                android:textAlignment="center"
                android:textColor="#515151"
                android:textSize="15dp"
                android:textStyle="normal" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView20"
            android:layout_width="22dp"
            android:layout_height="0dp"

            android:background="#76AF78"
            android:backgroundTint="#4CAF50"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView46"
            android:layout_width="22dp"
            android:layout_height="0dp"

            android:background="#76AF78"
            android:backgroundTint="#4CAF50"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>