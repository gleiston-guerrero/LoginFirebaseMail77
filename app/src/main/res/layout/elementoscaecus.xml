<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/elementoscaecus"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:animateLayoutChanges="true"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="475dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgFotoReconocimientoD"
            android:layout_width="379dp"
            android:layout_height="251dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:src="@drawable/camara"
            app:civ_border_color="#469749"
            app:civ_border_width="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.057" />

        <TextView
            android:id="@+id/txtUrlD"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/abel"
            android:text="Prediction data"
            android:textAlignment="center"
            android:textColor="#515151"
            android:textSize="20sp"
            android:textStyle="normal|bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgFotoReconocimientoD" />

        <LinearLayout
            android:layout_width="383dp"
            android:layout_height="149dp"
            android:orientation="horizontal"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtUrlD">

            <TextView
                android:id="@+id/txtNombreReconocimientoD"
                android:layout_width="172dp"
                android:layout_height="135dp"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/abel"
                android:padding="10dp"
                android:text="Recocimiento "
                android:textAlignment="textStart"
                android:textColor="@color/cardview_dark_background"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TxtConfianzaD"
                android:layout_width="196dp"
                android:layout_height="128dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/abel"
                android:padding="10dp"
                android:text="Confianza"
                android:textAlignment="textEnd"
                android:textColor="#515151"
                android:textSize="20sp"
                android:textStyle="normal" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>