<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/cv">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

      >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgFotoPaciente"
            android:layout_width="156dp"
            android:layout_height="132dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:src="@drawable/camara"
            app:civ_border_color="#4CAF50"
            app:civ_border_width="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="220dp"
            android:layout_height="160dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imgFotoPaciente"
            android:layout_toRightOf="@+id/imgFotoPaciente"
            android:orientation="vertical"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imgFotoPaciente"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.047">

            <TextView
                android:id="@+id/txtNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:fontFamily="@font/abel"
                android:text="Nombres"
                android:textColor="@color/cardview_dark_background"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TxtNacimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/abel"
                android:text="Nacimiento"
                android:textColor="#515151"
                android:textSize="15dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txtGenero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/abel"
                android:text="genero"
                android:textColor="#515151"
                android:textSize="15dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txtNameTutorV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/abel"
                android:text="NameTutor"
                android:textColor="#515151"
                android:textSize="15dp"
                android:textStyle="normal" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/txtDeciveName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abel"
                android:text="DeciveName"
                android:textColor="#515151"
                android:textSize="15dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txtMacdispositivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"
                android:fontFamily="@font/abel"
                android:text="MacDispositivo"
                android:textColor="#515151"
                android:textSize="15dp"
                android:textStyle="normal" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView20"
            android:layout_width="22dp"
            android:layout_height="154dp"

            android:background="#76AF78"
            android:backgroundTint="#4CAF50"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>